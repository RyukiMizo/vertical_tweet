<% provide(:title, "プロフィールを編集") %>

<div class="submit-form">
  <div class="left">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="profile-image">
        <% if not @user.image? %>
          <%= image_tag("default.png", size: '160x160', class: "radius") %>
        <% else %>
          <%= @user.image %>
        <% end %>
        <%= f.file_field :image , class: "change-image"%>
      </div>
      
      <div class="cp_iptxt">
      	<%= f.text_field :name, placeholder: "お名前" %>
      	<i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
      </div>
      <div class="cp_iptxt">
      	<%= f.email_field :email,  placeholder: "E-Mail" %>
      	<i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
      </div>

      <%= f.submit "変更を保存", class: "btn-gradient-3d  sub-bt" %>
    <% end %>
  </div>
</div>